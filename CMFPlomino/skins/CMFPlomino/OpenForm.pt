      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="main">
    <div id="bodyContent">
	<tal:block tal:define="owner python:here">
		<span metal:use-macro="here/ActionBar/macros/ActionBar" >
			display form actions
		</span>
