<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="main">
    <div id="bodyContent">
    	<h1><tal:block replace="structure python:getattr(here, here.getIcon(1))"/><span tal:content="here/Title">database title</span></h1>
		<p tal:content="here/Description">description</p>
		<tal:block tal:condition="python:here.hasReadPermission()"
					tal:define="composeforms python:[f for f in here.getForms() if not f.getSearchForm() and not f.getHideInMenu()==True];
								searchforms python:[f for f in here.getForms() if f.getSearchForm() and not f.getHideInMenu()==True];
								views python:[v for v in here.getViews() if not v.getHideInMenu()==True];">
			<tal:views tal:condition="python:len(views)>0">
				<h3 i18n:domain="CMFPlomino" i18n:translate="Browse">Browse</h3>
				<p tal:repeat="v views">
					<a href="#" tal:attributes="href v/absolute_url_path" tal:content="v/Title">view link</a>
					<br/>
				</p>
			</tal:views>
			<tal:search tal:condition="python:len(searchforms)>0">
				<h3 i18n:domain="CMFPlomino" i18n:translate="Search">Search</h3>
				<p tal:repeat="f searchforms">
					<a href="#" tal:attributes="href python:f.absolute_url_path()+'/OpenForm'" tal:content="f/Title">form link</a>
					<br/>
				</p>
			</tal:search>
			<tal:forms tal:condition="python:len(composeforms)>0">
				<h3 i18n:domain="CMFPlomino" i18n:translate="Add new content">Add new content</h3>
				<p tal:repeat="f composeforms">
					<a href="#" tal:attributes="href python:f.absolute_url_path()+'/OpenForm'" tal:content="f/Title">form link</a>
					<br/>
				</p>
			</tal:forms>
		</tal:block>
		<tal:block tal:condition="python:not(here.hasReadPermission())">
			<p>Please log in</p>
		</tal:block>
	</div>
</metal:main>

</body>
</html>

