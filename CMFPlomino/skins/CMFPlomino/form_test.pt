<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="main">
    <div id="bodyContent">
	    <form tal:attributes="name here/Title" action="createDocument" method="POST">
	    	<table>
			<tal:block tal:repeat="f python:here.getFolderContents(contentFilter = {'portal_type' : ['PlominoField']})">
				<tr><td><span tal:content="f/Title" />:</td><td><input type="text" tal:attributes="name f/Title"/></td></tr>
			</tal:block>
			</table>
			<input type="submit" value="Submit"/>
		</form>
	</div>
</metal:main>

</body>
</html>

