<span metal:define-macro="ViewActionBar">
	<table><tr>
    	<td><span metal:use-macro="here/ActionBar/macros/CloseAction" >display close action</span></td>
		<tal:block tal:repeat="a python:owner.getActions(here)">
	    	<td>
	    	<tal:block tal:define="plominoaction python:a; plominotarget python:here">
	    		<span metal:use-macro="here/ActionBar/macros/ButtonAction" >
					display action as a link
				</span>
			</tal:block>
			</td>
	    </tal:block>
    </tr></table>
</span>

<span metal:define-macro="LinkAction">
	<a tal:attributes="href python:plominoaction.executeAction(plominotarget)"
	    			tal:content="python: plominoaction.Title()" />
</span>

<span metal:define-macro="SubmitAction">
	<input type="submit" class="context" tal:attributes="value python: plominoaction.Title()" />
</span>

<span metal:define-macro="ButtonAction">
	<input class="context" type="button" tal:attributes="onclick python:'location.href=\''+plominoaction.executeAction(plominotarget)+'\'';
								value python: plominoaction.Title()" />
</span>

<span metal:define-macro="CloseAction">
	<input type="button" class="context" value="Close" i18n:domain="CMFPlomino" i18n:attributes="value" 
			tal:attributes="onclick python:'location.href=\''+here.navigationParent(here)+'\''"/>
</span>
<span metal:define-macro="DeleteAction">
	<input type="button" class="context" value="Delete" i18n:domain="CMFPlomino" i18n:attributes="value" 
			tal:attributes="onclick python:'location.href=\''+here.absolute_url()+'/delete?returnurl='+here.navigationParent(here)+'\''"/>
</span>
