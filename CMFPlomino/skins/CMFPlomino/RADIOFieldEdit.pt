<span>
	<tal:block tal:repeat="v options/selection">
		<tal:block tal:define="current options/fieldvalue;l python:v.split('|')">
			<input type="radio" 
				tal:attributes="name options/fieldname;
						value python:l[1];
						checked python:test(l[1]==current,1,0)">
					<tal:block tal:content="python:l[0]">value</tal:block><br/>
		</tal:block>
	</tal:block>
</span>
